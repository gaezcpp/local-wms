<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_stock_package_list_views">
            <field name="name">inherit.stock.package.list</field>
            <field name="model">stock.package</field>
            <field name="inherit_id" ref="stock.stock_package_view_list"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="inside">
                    <header>
                        <button name="action_qi" string="Set QI" type="object" class="btn-warning"/>
                        <button name="action_blocked" string="Set Blocked" type="object" class="btn-danger"/>
                        <button name="action_uu" string="Set UU" type="object" class="oe_highlight"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="state"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_stock_package_form_views">
            <field name="name">inherit.stock.package.form</field>
            <field name="model">stock.package</field>
            <field name="inherit_id" ref="stock.stock_package_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='unpack']" position="before">
                    <button name="action_qi" string="Set QI" type="object" class="btn-warning" invisible="state == 'QI'"/>
                    <button name="action_blocked" string="Set Blocked" type="object" class="btn-danger" invisible="state == 'Blocked'"/>
                    <button name="action_uu" string="Set UU" type="object" class="oe_highlight" invisible="state == 'UU'"/>
                    <field name="state" widget="statusbar"/>
                </xpath>
                <xpath expr="//field[@name='pack_date']" position="after">
                    <field name="pallet_status" force_save="1" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='contained_quant_ids']/list/field[@name='product_uom_id']" position="after">
                    <field name="exp_group"/>
                    <field name="inbound_date"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>