<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_product_template_form_views">
            <field name="name">inherit.product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="sap_mm" force_save="1" readonly="1"/>
                    <field name="uom_bag_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="uom_pallet_id" options="{'no_open': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>