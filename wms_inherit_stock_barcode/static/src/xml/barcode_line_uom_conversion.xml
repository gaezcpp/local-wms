<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="stock_barcode.BarcodeLine" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o_barcode_line_qty')]" position="after">

            <div class="o_barcode_uom_conversion text-muted">
                <t t-if="palletQty">
                    <div>
                        <t t-esc="palletQty.toFixed(2)"/> pallet
                    </div>
                </t>
                <t t-if="bagQty">
                    <div>
                        <t t-esc="bagQty.toFixed(2)"/> bag
                    </div>
                </t>
            </div>

        </xpath>
    </t>

</templates>